---
import { SITE } from 'astrowind:config';
import { Image } from 'astro:assets';
import AIBebopLogo from '../assets/logos/aibebop_pos.png';
import AIBebopLogoDark from '../assets/logos/aibebop_neg.png';
---

<span
  class="self-center ml-2 rtl:ml-0 rtl:mr-2 text-2xl md:text-xl font-bold text-gray-900 whitespace-nowrap dark:text-white"
>
  <Image src={AIBebopLogo} alt="AIbebop Logo" class="w-10 h-10 md:w-8 md:h-8 inline dark:hidden" />
  <Image src={AIBebopLogoDark} alt="AIbebop Logo Dark Mode" class="w-10 h-10 md:w-8 md:h-8 hidden dark:inline" />
  {SITE?.name}
</span>
